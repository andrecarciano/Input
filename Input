<div class="custom-select">
  <button class="prev-btn">&lt;</button>
  <span class="selected-item">Selecione uma opção</span>
  <button class="next-btn">&gt;</button>
  <select id="select-options">
    <option value="1">Opção 1</option>
    <option value="2">Opção 2</option>
    <option value="3">Opção 3</option>
    <!-- Adicione outras opções conforme necessário -->
  </select>
</div>


.custom-select {
  position: relative;
  display: inline-block;
}

.custom-select select {
  display: none;
}

.custom-select .selected-item {
  padding: 5px 10px;
}

.custom-select .prev-btn,
.custom-select .next-btn {
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: transparent;
  border: none;
  cursor: pointer;
}

.custom-select .prev-btn {
  left: 0;
}

.custom-select .next-btn {
  right: 0;
}




document.addEventListener("DOMContentLoaded", function() {
  var select = document.getElementById("select-options");
  var prevBtn = document.querySelector(".prev-btn");
  var nextBtn = document.querySelector(".next-btn");
  var selectedItem = document.querySelector(".selected-item");

  prevBtn.addEventListener("click", function() {
    if (select.selectedIndex > 0) {
      select.selectedIndex--;
      selectedItem.textContent = select.options[select.selectedIndex].textContent;
    }
  });

  nextBtn.addEventListener("click", function() {
    if (select.selectedIndex < select.options.length - 1) {
      select.selectedIndex++;
      selectedItem.textContent = select.options[select.selectedIndex].textContent;
    }
  });
});
